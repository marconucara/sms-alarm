<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.marconucara.smsalarm.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/origin_phone_number" />

    <EditText
        android:id="@+id/et_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/phone_number_hint"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_save_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_save_number" />

    <Button
        android:id="@+id/stop_sound"
        android:layout_width="280dp"
        android:layout_height="121dp"
        android:text="@string/action_stop_sound" />

</LinearLayout>
